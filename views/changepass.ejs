    <script>
        function changepass() {

            // let userID = $('#exampleInputuserid').val();
            let cpass = $('#exampleInputpass0').val();
            let pass1 = $('#exampleInputPass1').val();
            let pass2 = $('#exampleInputPass2').val();

            if (!cpass || !pass1 || !pass2) {
                iziToast.warning({
                    title: 'Error',
                    message: 'Please Fill All the Field',
                });
                return;
            }

            if (pass1 !== pass2) {
                iziToast.warning({
                    title: 'Error',
                    message: 'Mismatched Password',
                });
                $('#exampleInputPass1').val('');
                $('#exampleInputPass2').val('');
                return;
            }

            $.ajax({
                url: '/changepass',
                method: "POST",
                data: {
                    cpass: cpass,
                    newpass: pass2
                },
                success: (res) => {
                    if (res == 'incorrect') {
                        iziToast.warning({
                            title: 'Error',
                            message: 'Current Password Is incorrect',
                        });
                        $('#exampleInputpass0').val('');
                        $('#exampleInputPass1').val('');
                        $('#exampleInputPass2').val('');
                        return;
                    }
                    if (res == 'changed') {
                        iziToast.success({
                            title: 'Ok',
                            message: 'Password Changed',
                        });
                        $('#exampleInputpass0').val('');
                        $('#exampleInputPass1').val('');
                        $('#exampleInputPass2').val('');
                        return;
                    }


                }
            })


        }
    </script>

